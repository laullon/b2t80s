        .DATA
        .org $0000
result: .byte $ff

        .CODE
        .org $0400
        .P02            ; disable 65SC02, 65C02 and 65816 instructions
start:  NOP
        JMP start

nmi_trap:
irq_trap:
        NOP
        LDA #0
        STA result
        RTI

        .segment "VECTORS"
        .org $fffa       ;vectors
        .word   nmi_trap
        .word   start
        .word   irq_trap
